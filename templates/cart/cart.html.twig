{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}

{% block body %}

<main class="cart">
    <section>
        <div class="container">
        <h3 class="my-3"> Mon Panier</h3>
            <div class="row">

            {% for item in cart %}
                    <div class="col-6">

                        <div class="card mb-3 g-0 border-0">
                            <div class="row g-0">
                                <div class="col-md-3">
                                    <img src="{{ asset('/images/products/') ~ item.product.imageName }}" class="img-fluid rounded-start" alt="{{ item.product.imageName }}">
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body d-flex justify-content-between">
                                        <h3> {{ item.product.name }}</h3>
                                        
                                        <a href="{{ path('cart_delete', { "id": item.product.id }) }}" class="btn btn-close btn-close-custom " aria-label="Close"></a>
                                        
                                        
                                    </div>
                                    <div class="card-footer border-0">
                                        <p class="card-text">Quantit√© : {{ item.quantity }}</p>
                                        <p class="card-text">{{ (item.product.price / 100) | format_currency('EUR') }}</p>
                                    </div>
                                </div>       
                            </div>
                        </div>
                    </div>
                
                {% endfor %}

                <div class="col-6">
                    <div class="card g-0 border-0 mb-3">

                        <div class="card-body">
                            <p class="card-text mt-3">Total = {{ (TotalHTC / 100) | format_currency('EUR') }}</h3>
                        </div>

                        <div class="card-footer text-center border-0">
                            <a href="#" class="btn btn-primary">Paiement</a>
                        </div>
                        
                    </div>
                    
                </div>
        
            </div>

        </div>
    </section>
</main>

{% endblock %}
