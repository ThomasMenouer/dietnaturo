{% extends 'base.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block body %}

<main class="flex-grow-1">
    <section class="faqs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="text-center my-5">Foire aux questions</h1>
                    <div class="accordion accordion-flush mx-auto my-5" id="accordionFlush">

                        
                        {% for faq in faqs %}

                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button class="accordion-button collapsed accordion-color fs-5 fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse{{ loop.index }}" aria-expanded="false" aria-controls="flush-collapse{{ loop.index }}">
                                        {{ faq.question }}
                                    </button>
                                </h3>
                                <div id="flush-collapse{{ loop.index }}" class="accordion-collapse collapse" data-bs-parent="#accordionFlush">
                                    <div class="accordion-body accordion-body-color text-white">
                                        {{ faq.answer | raw }}
                                    </div>
                                </div>
                            </div>

                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


{% endblock %}
