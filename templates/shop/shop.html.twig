{% extends 'base.html.twig' %}

{% block title %}Boutique{% endblock %}

{% block body %}

<main class="shop">

    <section class="section-shop my-5">
        <div class="container">

            {# <div class="row">
                <nav>
                    <ul class="nav nav-category justify-content-center py-3">

                        {% for category in allCategories %}

                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'blog_category' and app.request.attributes.get('slug') == category.slug %}active{% endif %}" aria-current="page" href="{{ path('blog_category', { "slug": category.slug }) }}">{{ category.name }}</a>
                        </li>

                        {% endfor %}
                    </ul>
                </nav>
            </div> #}
        
            <div class="row row-cols-1 row-cols-md-3 g-4 my-5">

                {% for product in products %}

                    <div class="col">

                        <div class="card h-100">

                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <span class="badge-article badge text-bg-warning py-2 my-1">{{ product.categories }}</span>
                                <img class="img-fluid" src="{{ asset('/images/products/') ~ product.imageName }}">
                            </div>
                            <div class="card-footer text-center border-0 bg-white">
                                <a href="{{ path('shop_product', { "slug": product.slug }) }}" class="btn btn-primary">Lire</a>
                            </div>

                        </div>
                    </div>
                
                {% endfor %}
            </div>
        </div>
    </div>
                



</main>

{% endblock %}
