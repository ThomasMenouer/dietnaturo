{# templates/invoices/invoice.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Facture - {{ order.reference }}</title>
    <style>
        /* Reset minimal */
        body, h1, h2, h3, p, table {
            margin: 0;
            padding: 0;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }
        body {
            padding: 2rem;
            font-size: 14px;
            color: #333;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        header h1 {
            font-size: 24px;
            color: #111;
        }
        .company-info {
            text-align: right;
            font-size: 12px;
            color: #666;
        }
        .customer-info {
            margin-bottom: 2rem;
        }
        .customer-info h2 {
            font-size: 16px;
            margin-bottom: 0.5rem;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 2rem;
        }
        table th, table td {
            text-align: left;
            padding: 0.75rem;
            border-bottom: 1px solid #e0e0e0;
        }
        table th {
            background-color: #f9f9f9;
            font-weight: 600;
        }
        tfoot td {
            font-weight: 700;
            border-top: 2px solid #333;
        }
        .total {
            text-align: right;
        }
        footer {
            text-align: center;
            font-size: 12px;
            color: #999;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <h1>Facture</h1>
        <div class="company-info">
            dietnaturo.fr<br>
            coline.legeard@dietnaro.fr
        </div>
    </header>

    <section class="customer-info">
        <h2>Client :</h2>
        <p>{{ order.firstname }} {{ order.lastname }}</p>
        <p>{{ order.email }}</p>
        <p>Référence : {{ order.reference }}</p>
        <p>Date : {{ order.createdAt|date('d/m/Y') }}</p>
    </section>

    <table>
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for detail in order.orderDetails %}
            <tr>
                <td>{{ detail.productName }}</td>
                <td>{{ detail.quantity }}</td>
                <td>{{ (detail.price / 100)|number_format(2, ',', ' ') }} €</td>
                <td>{{ (detail.price * detail.quantity / 100)|number_format(2, ',', ' ') }} €</td>
            </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="total">Total :</td>
                <td>{{ (order.totalPrice / 100)|number_format(2, ',', ' ') }} €</td>
            </tr>
        </tfoot>
    </table>

    <footer>
        Merci pour votre commande !<br>
        Ce document est une facture générée automatiquement.
    </footer>
</body>
</html>
