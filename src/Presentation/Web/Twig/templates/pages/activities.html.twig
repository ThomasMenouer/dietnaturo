{% extends 'base.html.twig' %}

{% block title %}Activités
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="text-center py-5">Mes différentes Activités</h1>
	</div>

	<div class="container">

		{% for activity in activities %}
			{% if loop.index is odd %}

				<div class="row mb-5 g-4">
					<div class="col-12 col-md-6">
						<div class="card border-0 h-100 rounded-4 shadow-sm">
							<img src="{{ asset('/images/activities/') ~ activity.imageName }}" class="img-fluid h-100 rounded-4" alt="">
						</div>

					</div>

					<div class="col-12 col-md-6">

						<div class="card text-center border-0 h-100 rounded-4 shadow-sm p-4">

							<div class="card-header text-center">
								<h3 class="card-title">{{ activity.title }}</h3>
							</div>
							<div class="card-body">
								<div class="card-text">{{ activity.content | raw }}</div>
							</div>

						</div>
					</div>
				</div>
			{% else %}
				<div class="row mb-5 g-4">
					<div class="col-12 col-md-6">

						<div class="card text-center border-0 h-100 rounded-4 shadow-sm p-4">

							<div class="card-header text-center">
								<h3 class="card-title">{{ activity.title }}</h3>
							</div>
							<div class="card-body">
								<div class="card-text">{{ activity.content | raw }}</div>
							</div>

						</div>
					</div>
					<div class="col-12 col-md-6">
						<div class="card border-0 h-100 rounded-4 shadow-sm">
							<img src="{{ asset('/images/activities/') ~ activity.imageName }}" class="img-fluid h-100 rounded-4" alt="">
						</div>
					</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>

{% endblock %}
