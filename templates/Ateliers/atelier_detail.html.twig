{% extends 'base.html.twig' %}

{% block title %} {{ atelier.title }} {% endblock %}

{% block body %}

<main class="flex-grow-1">
    <section class="article-section my-5">
        
        <h1 class="text-center mb-5"> {{ atelier.title }}</h1>
        <div class="col">
        
        </div>

        <p class="">{{ atelier.content | raw }}</p>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        S'inscrire
        </button>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">S'inscrire</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        {{ form_start(form) }}
                            {{ form_errors(form) }}

                            {{ form_row(form.email) }}
                            
                            {{ form_row(form.dateDisponible)}}
                            
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                {{ form_row(form.Inscription) }}
                            </div>

                            
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>

    </section>
</main>

{% endblock %}