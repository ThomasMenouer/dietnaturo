{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}

<main class="flex-grow-1">
    <section class="consultation py-5">
        <div class="container">
            <div class="row row-consultation">
                {% for consultation in consultations %}
                    <h3 class="title text-center text-white">{{ consultation.title }}</h3>
                    <div class="fs-4 text-center text-white">{{ consultation.content | raw }}</div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section>

        <div class="container my-5">

            {% for deroulement in deroulements %}
                
                <div class="row mb-5">
                
                    <div class="card p-5 border-0 rounded-4 d-flex flex-row justify-content-between">
                    
                        {% if loop.index is odd %}
                            <!-- Image à gauche pour les itérations impaires -->
                            <div class="col-md-3">
                                <img src="{{ asset('/images/consultations/') ~ deroulement.imageName }}" class="img-fluid object-fit-cover shadow rounded-4" style="transform: translateX(-80px);" alt="{{ deroulement.imageName }}">
                            </div>
                            
                            <div class="col-md-9">
                                <div class="card-body">
                                    <span class="card-text fw-bold fs-5">{{ "%02d"|format(deroulement.step) }}</span>
                                    <h3 class="card-title">{{ deroulement.title }}</h3>
                                    <p class="card-text">{{ deroulement.content | raw }}</p>
                                </div>
                            </div>

                        {% else %}
                            <!-- Image à droite pour les itérations paires -->
                            <div  class="col-md-9">
                                <div class="card-body">
                                    <span class="card-text fw-bold fs-5">{{ "%02d"|format(deroulement.step) }}</span>
                                    <h3 class="card-title">{{ deroulement.title }}</h3>
                                    <p class="card-text">{{ deroulement.content | raw }}</p>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <img src="{{ asset('/images/consultations/') ~ deroulement.imageName }}" class="img-fluid object-fit-cover shadow rounded-4"  style="transform: translateX(80px);" alt="{{ deroulement.imageName }}">
                            </div>

                        {% endif %}
                        
                    </div>
                </div>

            {% endfor %}

        </div>

    </section>
</main>
{% endblock %}
