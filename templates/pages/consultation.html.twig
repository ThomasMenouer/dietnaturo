{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block body %}

<main>
    <section class="consultation">

        <div class="container my-5">
            <div class="row">
                <div class="col-6 mx-auto">

                    <div class="card text-center">
                        <div class="card-body">

                            {% for consultation in consultations %}
                                <h5 class="card-title">{{ consultation.title }}</h5>
                                <p class="card-text">{{ consultation.content | raw }}</p>
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>


            <div class="row">

                {% for deroulement in deroulements %}
                
                    <div class="col">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="..." class="img-fluid rounded-start" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <p class="card-text"> {{ deroulement.step }}</p>
                                        <h5 class="card-title">{{ deroulement.title }}</h5>

                                        <p class="card-text">{{ deroulement.content | raw }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                {% endfor %}
            </div>
        </div>

    </section>
</main>
{% endblock %}
